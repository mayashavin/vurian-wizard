{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "newLine": "lf",
        "noImplicitAny": false,
        "types": [
            "node",
            "vue"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "plugins": [
            {
                "transform":"@zerollup/ts-transform-paths",
                "exclude": ["*"]
            }
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
